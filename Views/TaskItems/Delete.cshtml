﻿
@model asp_net_parcijalni_ispit_Ivan_Blazun.Models.TaskItem

@{
	ViewData["Title"] = "Delete";
}

<h1>Brisanje</h1>

<h3>Jeste li sigurni da želite obrisati?</h3>
<div>
	<h4>Zadatak</h4>
	<hr/>
	<dl class="row">
		<dt class="col-sm-2">
			Naziv zadatka:
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.TaskName)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id"/>
		<input type="submit" value="Obriši" class="btn btn-danger"/> |
		<a asp-action="Index" class="btn btn-outline-warning">Natrag na listu</a>
	</form>
</div>